<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/client/conta/css/conta.css">
        <title>Login</title>
    </head>
    <body>
        <div id="container">
            <header>
                <a id="titulo" href="/">SGE: Sistema de Gestão Escolar</a>
                <nav>
                    <ul>
                        <li>
                            <a href="/contato/">Contato</a>
                        </li>
                        <li>
                            <a href="/conta/login/">Login</a>
                        </li>
                    </ul>
                </nav>
            </header>
            <main>
                <section id="formTitulo">
                    <h1>Vincule Disciplina em Turma</h1>
                </section>
                <form method="POST" action="./">
                    <div>
                        <label for="id_turma">ID da Turma</label><br>
                        <select id="id_turma" name="id_turma">
                            <% turmas = [] %>
                            <% banco.forEach(function(banco){ %>
                                <% if (!turmas.includes(banco.turma)) { %>
                                    <% turmas.push(banco.turma) %>
                                    <option name="<%= banco.turma %>" value="<%= banco.turma %>"><%= banco.turma %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="id_disciplina">ID da Disciplina</label><br>
                        <select id="id_disciplina" name="id_disciplina">
                            <% var i = 0 %>
                            <% banco.forEach(function(banco){ %>
                                <% if (i != banco.disciplina) { %>
                                    <option name="<%= banco.disciplina %>" value="<%= banco.disciplina %>"><%= banco.disciplina %></option>
                                <% } %>    
                                <% i = banco.disciplina %>
                            <% }) %>
                        </select>
                    </div>
                    <input type="submit" value="Cadastrar"><br><br><br>
                    <a href="../">Voltar</a>
                </form>
            </main>
            <footer>
                <p>Página criada por Rafael Petry da Silva, 2021.</p>
            </footer>
        </div>
    </body>
</html>