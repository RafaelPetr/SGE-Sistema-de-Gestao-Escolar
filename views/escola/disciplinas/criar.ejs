<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/client/conta/css/conta.css">
        <title>Login</title>
    </head>
    <body>
        <div id="container">
            <header>
                <a id="titulo" href="/">SGE: Sistema de Gestão Escolar</a>
                <nav>
                    <ul>
                        <li>
                            <a href="/contato/">Contato</a>
                        </li>
                        <li>
                            <a href="/conta/login/">Login</a>
                        </li>
                    </ul>
                </nav>
            </header>
            <main>
                <section id="formTitulo">
                    <h1>Cadastrar Disciplina</h1>
                </section>
                <form method="POST" action="./">
                    <div>
                        <label for="nome">Nome</label><br>
                        <input type="text" id="nome" name="nome"><br>
                    </div>
                    <div>
                        <label for="carga">Carga Horária</label><br>
                        <input type="number" id="carga" name="carga"><br>
                    </div>
                    <div>
                        <label for="id_curso">ID do Curso</label><br>
                        <select id="id_curso" name="id_curso">
                            <% banco.forEach(function(banco){ %>
                                <option name="<%= banco.id_curso %>" value="<%= banco.id_curso %>"><%= banco.id_curso %></option>
                            <% }) %>
                        </select>
                    </div>
                    <input type="submit" value="Cadastrar"><br><br><br>
                    <a href="../">Voltar</a>
                </form>
            </main>
            <footer>
                <p>Página criada por Rafael Petry da Silva, 2021.</p>
            </footer>
        </div>
    </body>
</html>