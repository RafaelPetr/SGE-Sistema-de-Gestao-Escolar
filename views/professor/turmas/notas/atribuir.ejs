<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/client/conta/css/conta.css">
        <title>Login</title>
    </head>
    <body>
        <div id="container">
            <header>
                <a id="titulo" href="/">SGE: Sistema de Gestão Escolar</a>
                <nav>
                    <ul>
                        <li>
                            <a href="/contato/">Contato</a>
                        </li>
                        <li>
                            <a href="/conta/login/">Login</a>
                        </li>
                    </ul>
                </nav>
            </header>
            <main>
                <section id="formTitulo">
                    <h1>Cadastrar Aluno</h1>
                </section>
                <form method="POST" action="./">
                    <div>
                        <label for="matricula">Matrícula</label><br>
                        <select id="matricula" name="matricula">
                            <% matriculas = [] %>
                            <% banco.forEach(function(banco){ %>
                                <% if (!matriculas.includes(banco.matricula)) { %>
                                    <% matriculas.push(banco.matricula) %>
                                    <option name="<%= banco.matricula %>" value="<%= banco.matricula %>"><%= banco.matricula %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="disciplina">Disciplina</label><br>
                        <select id="disciplina" name="disciplina">
                            <% disciplinas = [] %>
                            <% banco.forEach(function(banco){ %>
                                <% if (!disciplinas.includes(banco.disciplina)) { %>
                                    <% disciplinas.push(banco.disciplina) %>
                                    <option name="<%= banco.disciplina %>" value="<%= banco.disciplina %>"><%= banco.disciplina %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="nota1">Trimestre 1</label><br>
                        <input type="number" id="nota1" name="nota1"><br>
                    </div>
                    <div>
                        <label for="nota2">Trimestre 2</label><br>
                        <input type="number" id="nota2" name="nota2"><br>
                    </div>
                    <div>
                        <label for="nota3">Trimestre 3</label><br>
                        <input type="number" id="nota3" name="nota3"><br>
                    </div>
                    <input type="submit" value="Cadastrar"><br><br><br>
                    <a href="../">Voltar</a>
                </form>
            </main>
            <footer>
                <p>Página criada por Rafael Petry da Silva, 2021.</p>
            </footer>
        </div>
    </body>
</html>